{
  "openapi": "3.1.0",
  "info": {
    "title": "SimplefiSimplified payment API",
    "version": "1.0.0",
    "description": "The goal of this project is implement a simplified version of a payment service. It should be possible to make transfers between ordinary customers and merchants, and the **merchant only receive transfers**. Ordinary users can make and receive transfers from any other customer.",
    "license": {
      "name": "MIT",
      "url": "https://mit-license.org/"
    }
  },
  "paths": {
    "/api/users": {
      "get": {
        "summary": "Retrieve a list of all users",
        "tags": ["users"],
        "responses": {
          "200": {
            "description": "List of users",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserList"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Register a new user",
        "tags": ["users"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewUser"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User registered successfully"
          },
          "400": {
            "description": "Bad request"
          }
        }
      }
    },
    "/api/users/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "schema": {
            "type": "string"
          },
          "required": true
        }
      ],
      "get": {
        "tags": ["users"],
        "summary": "Retrieve a user by id",
        "responses": {
          "200": {
            "description": "User retrieved"
          }
        }
      },
      "delete": {
        "tags": ["users"],
        "summary": "Delete a user by id",
        "responses": {
          "200": {
            "description": "User deleted"
          }
        }
      }
    },
    "/api/transactions": {
      "post": {
        "summary": "Register a new transaction between users",
        "tags": ["transacions"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewTransaction"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "transaction registered successfully"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "firstName": {
            "type": "string"
          },
          "surname": {
            "type": "string"
          },
          "registration": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "balance": {
            "type": "number",
            "format": "float"
          },
          "type": {
            "type": "string"
          }
        }
      },
      "UserList": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/User"
        }
      },
      "NewUser": {
        "type": "object",
        "properties": {
          "firstName": {
            "type": "string"
          },
          "surname": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "registration": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "balance": {
            "type": "number",
            "format": "float"
          }
        },
        "required": [
          "firstName",
          "surname",
          "password",
          "registration",
          "email",
          "type",
          "balance"
        ]
      },
      "NewTransaction": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string"
          },
          "transactionId": {
            "type": "string"
          },
          "amount": {
            "type": "number",
            "format": "float"
          },
          "currency": {
            "type": "string"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "sender": {
            "$ref": "#/components/schemas/UserRef"
          },
          "receiver": {
            "$ref": "#/components/schemas/UserRef"
          }
        },
        "required": [
          "status",
          "transactionId",
          "amount",
          "currency",
          "timestamp",
          "sender",
          "receiver"
        ]
      },
      "UserRef": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        },
        "required": ["id", "name"]
      }
    }
  }
}
