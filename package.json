{
  "name": "payment-api",
  "title": "Simplified Payment API",
  "description": "Simple solution for a payment api using Bun and Elysia.",
  "author": {
    "name": "Lucas Patrick",
    "email": "tech.patrick.lsilva@gmail.com",
    "url": "https://github.com/patricks-js"
  },
  "version": "1.0.50",
  "type": "module",
  "module": "src/main/server.js",
  "scripts": {
    "start": "NODE_ENV=production bun src/main/index.ts",
    "start:dev": "bun --watch src/main/server.ts",
    "build": "bun build src/index.ts",
    "test": "bun test",
    "lint": "biome check --apply .",
    "prepare": "lefthook install",
    "migration:run": "bun run ./src/infra/database/migrations.ts"
  },
  "dependencies": {
    "@elysiajs/swagger": "^1.0.5",
    "elysia": "latest",
    "postgres": "^3.4.4",
    "postgres-migrations": "^5.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.3",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "bun-types": "latest",
    "lefthook": "^1.6.10"
  }
}